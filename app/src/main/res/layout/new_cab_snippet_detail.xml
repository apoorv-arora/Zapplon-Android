<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_cab_snippet_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.application.zapplon.utils.TextViewThin
        android:id="@+id/recommended2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text_color"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginTop="@dimen/size5"
        android:background="@drawable/round_cornor_recommend"
        android:text="@string/recommend"
        android:textAllCaps="true"
        android:padding="3.65dp"
        android:textSize="@dimen/size10" />

    <LinearLayout
        android:layout_below="@id/recommended2"
        android:id="@+id/top_container"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cab_icon2"
            android:layout_width="@dimen/size30"
            android:layout_height="@dimen/size30"
            android:layout_marginTop="@dimen/size10"
            android:layout_marginBottom="@dimen/size10"
            android:layout_marginLeft="@dimen/size10"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.6"
            android:layout_marginLeft="@dimen/size10"
            android:orientation="vertical">

            <com.application.zapplon.utils.TextViewThin
                android:id="@+id/display_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_color"
                android:paddingTop="@dimen/size10"
                android:gravity="bottom"
                android:textSize="@dimen/size16" />

            <com.application.zapplon.utils.TextViewLight
                android:id="@+id/cab_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/size12"
                android:letterSpacing="0.1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zapps_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:visibility="invisible"
            android:orientation="vertical">

            <com.application.zapplon.utils.TextViewThin
                android:id="@+id/zapp_count2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/active_color"
                android:paddingTop="@dimen/size10"
                android:gravity="bottom"
                android:textSize="@dimen/size16" />

            <com.application.zapplon.utils.TextViewLight
                android:id="@+id/zapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_color"
                android:text="@string/zapps"
                android:textSize="@dimen/size12"
                android:letterSpacing="0.1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/surge_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.6"
            android:visibility="invisible"
            android:paddingTop="-15dp"
            android:orientation="vertical">

            <com.application.zapplon.utils.IconView
                android:id="@+id/surge_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U"
                android:textColor="@color/active_color"
                android:textSize="@dimen/size22" />

            <com.application.zapplon.utils.TextViewLight
                android:id="@+id/surge_value2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/active_color"
                android:paddingTop="@dimen/size10"
                android:textAllCaps="true"
                android:textSize="@dimen/size12"
                android:letterSpacing="0.1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_container"
        android:layout_width="match_parent"
        android:layout_below="@id/top_container"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/zhl_light">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/color_separator_color_dark" />

        <LinearLayout
            android:id="@+id/cab_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:paddingLeft="@dimen/size50">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.application.zapplon.utils.TextViewThin
                        android:paddingTop="@dimen/size15"
                        android:id="@+id/time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/size16" />

                    <com.application.zapplon.utils.TextViewLight
                        android:id="@+id/away"
                        android:paddingBottom="@dimen/size15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text_color"
                        android:text="@string/away"
                        android:textAllCaps="true"
                        android:textSize="@dimen/size12"
                        android:letterSpacing="0.1"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <View
                        android:layout_marginRight="@dimen/size10"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_separator_color_dark" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.application.zapplon.utils.TextViewThin
                        android:paddingTop="@dimen/size15"
                        android:id="@+id/travel_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/size16" />

                    <com.application.zapplon.utils.TextViewLight
                        android:paddingBottom="@dimen/size15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/base_fare"
                        android:textAllCaps="true"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="@dimen/size12"
                        android:letterSpacing="0.1"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="right"
                    android:paddingTop="@dimen/size15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.application.zapplon.utils.TextViewLight
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textColor="@color/secondary_text_color"
                        android:layout_marginRight="@dimen/size15"
                        android:textSize="@dimen/size14" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.application.zapplon.utils.TextViewThin
                    android:paddingTop="@dimen/size15"
                    android:id="@+id/rate_per_KM2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/size16" />

                <com.application.zapplon.utils.TextViewLight
                    android:paddingBottom="@dimen/size10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/per_km"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/size12"
                    android:letterSpacing="0.1"/>

            </LinearLayout>


        </LinearLayout>
        <View
            android:id="@+id/border"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/color_separator_color_dark" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_below="@id/middle_container"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size50"
        android:orientation="horizontal"
        android:background="@color/zhl_light">

        <com.application.zapplon.utils.TextViewLight
            android:paddingTop="@dimen/size10"
            android:paddingBottom="@dimen/size10"
            android:id="@+id/lb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_destination"
            android:textSize="@dimen/size14"
            android:textColor="@color/secondary_text_color"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lb2"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:paddingTop="@dimen/size15"
                    android:paddingBottom="@dimen/size15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.application.zapplon.utils.TextViewThin
                        android:id="@+id/ETA_VALUE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/size16" />

                    <com.application.zapplon.utils.TextViewLight
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/eta"
                        android:textAllCaps="true"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="@dimen/size12"
                        android:letterSpacing="0.1"/>

                </LinearLayout>

                <LinearLayout

                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <View

                        android:layout_marginRight="@dimen/size10"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_separator_color_dark" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:paddingTop="@dimen/size15"
                android:paddingBottom="@dimen/size15"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.application.zapplon.utils.TextViewThin
                    android:id="@+id/EST_COST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/size16" />

                <com.application.zapplon.utils.TextViewThin
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estimate"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/size12"
                    android:letterSpacing="0.1"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <com.application.zapplon.utils.TextViewBold
        android:id="@+id/book_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/book_now"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/zapplon_button_feedback"
        android:layout_below="@id/bottom_container"
        android:paddingTop="@dimen/size15"
        android:paddingBottom="@dimen/size15"
        android:clickable="true"
        android:textSize="@dimen/size12"
        android:letterSpacing="0.1"/>

</RelativeLayout>