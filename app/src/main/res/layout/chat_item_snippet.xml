<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_snippet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_trans_ninety">

    <com.application.zapplon.utils.TextViewBold
        android:id="@+id/message_preview_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginRight="@dimen/size20"
        android:layout_marginTop="@dimen/size10"
        android:background="@color/blue_trans_ninety"
        android:padding="@dimen/size10"
        android:text="I can help  you with that"
        android:textColor="@color/white"
        android:textSize="@dimen/size14"
        android:visibility="gone" />

    <com.application.zapplon.utils.TextViewBold
        android:id="@+id/message_preview_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginRight="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:background="@color/blue_trans_ninety"
        android:padding="@dimen/size10"
        android:text="I can help you with that"
        android:textColor="@color/white"
        android:textSize="@dimen/size14"
        android:visibility="gone" />

</RelativeLayout>